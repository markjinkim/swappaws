<div class="card striped pad-1">
  <div class="row">
    <div class="col s12">
      <ul>
        <li>Request <span class="flow-text teal-text"><strong><%= @sitter.first_name %></strong></span> to watch your pet</li>
        <li><strong>Start Date: </strong><%= date_time_helper(@event.start_date_time) %></li>
        <li><strong>End Date: </strong><%= date_time_helper(@event.end_date_time) %></li>
        <li><strong>Address: </strong><%= @event.street_address%></li>
        <li><strong>City: </strong><%= @event.city%></li>
        <% if user_signed_in? && current_user.tokens >= 1 && @event.start_date_time > DateTime.now %>
          <%= link_to 'Request to Book', new_event_request_path(@event), class: 'waves-light waves-effect btn' %>
        <% elsif user_signed_in? && current_user.tokens == 0 %>
          <p>It looks like you're all out of tokens! Purchase more if you want to book another sitting</p>
          <%= link_to 'Purchase tokens', purchase_path %>
        <% else %>
          <p><%= link_to 'Create a user account', new_user_registration_path %> or <%= link_to 'login', new_user_session_path %> to book this sitting!</p>
        <% end %>
      </ul>
    </div>
  </div>
</div>
