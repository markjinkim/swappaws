<%= form_for @pet do |f| %>
  <%= f.hidden_field :user_id, value: current_user.id %>
    <% if @pet.errors.any? %>
      <div id="error_explanation">
        <h4 class="flow-text">
          <%= pluralize(@pet.errors.count, "error") %> prohibited
          this pet from being saved:
        </h4>
        <ul>
          <% @pet.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="card-panel">
      <div class="row">
        <div class="col s12 m6 l6 input-field">
          <p>
            <%= f.label :name %><br>
            <%= f.text_field :name, autofocus: true %>
          </p>
        </div>
        <div class="col s12 m6 l6 input-field">
          <p>
            <%= f.label :age %><br>
            <%= f.number_field :age %>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m6 l6 input-field">
          <p>
            <%= f.label :breed %><br>
            <%= f.text_field :breed %>
          </p>
        </div>
        <div class="col s12 m6 l6 input-field">
          <p>
            <%= f.label :size %><br>
            <%= f.select :size, ['small', 'medium', 'large', 'very large']%>
          </p>
        </div>
      </div>

      <div class="row">
        <div class="col s12 m6 l6 input-field">
          <p>
            <%= f.label :description %><br>
            <%= f.text_area :description, size: "20x40" %>
          </p>
        </div>
          <%# This will need to be adjusted in both the migration and this form field for images%>
        <div class="col s12 m6 l6 input-field">
          <p>
          <div class="pad-2">
            <%= f.label :photo %>
            <%= f.file_field :photo %>
            </div>
          </p>
        </div>
      </div>

      <div class="row">
      <div class="col s6">
        <div class="pad-t-1">
        <%= link_to 'Back', profile_path, class: "wave-effect waves-light btn" %>
      </div>
    </div>
    <div class="col s6 pad-s-1">
      <p>
        <%= f.submit 'Submit', class: "waves-light waves-effect btn" %>
      </p>
    </div>
  </div>
  </div>
<% end %>
