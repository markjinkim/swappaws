<div class="row">
  <div class="col s12">
    <div class="card-panel cyan darken-2">
      <h4 class ="white-text flow-text pad-s-7 text-align: center">Connect local pet owners to share pet care</h4>
    </div>
  </div>
</div>

<div class="carousel carousel-slider">
  <% @pets.each do |pet| %>
    <a class="carousel-item"><%=image_tag pet.photo.url(:custom)%></a>
  <% end %>
</div>
